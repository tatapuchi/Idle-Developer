<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Idle.Views.SessionPage"
             xmlns:partials="clr-namespace:Idle.Views.Partials"
             xmlns:tabs="http://sharpnado.com">
    <!--Pages can be added as references or inline-->
    <TabbedPage.Children>
        <NavigationPage Title="Languages">
            <x:Arguments>
                <partials:LanguageTab/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Frameworks">
            <x:Arguments>
                <partials:FrameworkTab/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Tools">
            <x:Arguments>
                <partials:ToolTab/>
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>

</TabbedPage>