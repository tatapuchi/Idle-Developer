<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:vm="clr-namespace:Idle.Logic.Shop.Markets;assembly=Idle.Logic"
       x:Class="Idle.Views.Shop.Markets.LanguageItemCell"
       x:DataType="{x:Type vm:LanguageItemViewModel}"
       BackgroundColor="{StaticResource Blue}" CornerRadius="12">
    <!--#endregion-->

    <StackLayout
        Spacing="8"
        Orientation="Vertical" 
        HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">

        <Image Scale="0.75" Source="{Binding ImagePath, Converter={StaticResource stringToImageSourceConverter}}" 
                   VerticalOptions="StartAndExpand"/>

        <BoxView HeightRequest="4" WidthRequest="100" BackgroundColor="{StaticResource LightGreen}" CornerRadius="2"/>

        <Label Text="{Binding Name}" 
                       FontSize="Subtitle" FontAttributes="Bold" 
                       TextColor="{StaticResource LightPurple}"
                       HorizontalOptions="Center"/>

        <Label Text="{Binding Description}"
                       FontAttributes="Italic" TextColor="White"/>




        <Button BackgroundColor="{StaticResource Green}" Text="{Binding Path=XPCost,StringFormat='{0} XP' }" TextColor="White" Command="{Binding PurchaseLanguageCommand}" CornerRadius="12" HorizontalOptions="CenterAndExpand"/>

        
    </StackLayout>
</Frame>