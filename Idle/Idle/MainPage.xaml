<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:local="clr-namespace:Idle.Views"
            x:Class="Idle.MainPage">

    <TabbedPage.Children>
        <NavigationPage Title="Fields">
            <x:Arguments>
                <local:SessionPage/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Shop">
            <x:Arguments>
                <local:ShopPage/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Job">
            <x:Arguments>
                <local:JobPage/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Projects">
            <x:Arguments>
                <local:ProjectPage/>
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>
