<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Idle.MainPage">

    <StackLayout Margin="12">

        <Entry x:Name="FileEntry"/>
        <Entry x:Name="SessionEntry"/>
        <Button x:Name="Java" Text="Java" CornerRadius="12" BackgroundColor="Orange" Clicked="Java_Clicked" />
        <Button x:Name="Kotlin" Text="Kotlin" CornerRadius="12" BackgroundColor="Orange" Clicked="Kotlin_Clicked" />
        <Button x:Name="CSharp" Text="C#" CornerRadius="12" BackgroundColor="Orange" Clicked="CSharp_Clicked" />
        <Button x:Name="HTML" Text="HTML" CornerRadius="12" BackgroundColor="Orange" Clicked="HTML_Clicked"/>
        <Button x:Name="CSS" Text="CSS" CornerRadius="12" BackgroundColor="Orange" Clicked="CSS_Clicked"/>
        <Button x:Name="JavaScript" Text="JavaScript" CornerRadius="12" BackgroundColor="Orange" Clicked="JavaScript_Clicked"/>
        <Button x:Name="Python" Text="Python" CornerRadius="12" BackgroundColor="Orange" Clicked="Python_Clicked"/>
        <!-- Temporary button to bring you to session progress-->
        <Button x:Name="btnSessionProgress" Text="Progress Page" CornerRadius="12" BackgroundColor="Orange" Clicked="BtnSessionProgress_Clicked"/>
        <Button x:Name="ShopButton" Text="Shop Page" CornerRadius="12" BackgroundColor="Orange" Clicked="ShopButton_Clicked"/>

    </StackLayout>

</ContentPage>
