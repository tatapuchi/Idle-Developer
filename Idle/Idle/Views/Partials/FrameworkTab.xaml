<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Idle.Views.Partials.FrameworkTab"
             xmlns:cells="clr-namespace:Idle.Views.Cells">
    <ContentPage.Content>
        <StackLayout Margin="12">

            <ListView x:Name="FrameworkList" RowHeight="300">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <cells:SessionCell/>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>


            <Button x:Name="Save" CornerRadius="12" Text="Save" BackgroundColor="LightBlue" 
                     Clicked="Save_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>